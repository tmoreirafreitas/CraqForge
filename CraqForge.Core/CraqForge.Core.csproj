<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageId>CraqForge.Core</PackageId>
		<Version>1.0.1</Version>
		<Authors>Thiago Gabriel Moreira Freitas</Authors>
		<Company>CraqForge</Company>
		<PackageDescription>Utilitários compartilhados para o ecossistema CraqForge.</PackageDescription>
		<PackageTags>craqforge;core;utilities;helpers;file-management;validation;identifiers;shared</PackageTags>
		<RepositoryUrl>https://github.com/tmoreirafreitas/CraqForge</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.1" />
	  <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.1" />
	</ItemGroup>

	<ItemGroup>
		<InternalsVisibleTo Include="CraqForge.Core.Tests" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\CraqForge.Core.Abstractions\CraqForge.Core.Abstractions.csproj" />
	</ItemGroup>
</Project>
